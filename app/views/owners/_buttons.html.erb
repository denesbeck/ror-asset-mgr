<div class='buttonContainer'>
  <%= button_to owner_path(owner), method: :get do %>
    <i title='Show' class="fa-regular fa-eye fa-xl"></i>
  <% end %>
  <%= button_to edit_owner_path(owner), method: :get do %>
    <i title='Update' class="fa-solid fa-pen-to-square fa-xl"></i>
  <% end %>
  <%= button_to owner_path(owner), method: :delete, data: {confirm: 'Are you sure?'} do %>
    <i title='Delete' class="fa-solid fa-trash-can fa-xl"></i>
  <% end %>
</div>

